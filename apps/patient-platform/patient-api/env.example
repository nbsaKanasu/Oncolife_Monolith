# =============================================================================
# OncoLife Patient API - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values
# 
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------

# Application identification
APP_NAME=OncoLife Patient API
APP_VERSION=1.0.0

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=true

# Logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Log format: json (production) or text (development)
LOG_FORMAT=text

# API prefix
API_V1_PREFIX=/api/v1

# CORS - comma-separated origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# PATIENT DATABASE (PostgreSQL)
# -----------------------------------------------------------------------------

# Database connection
PATIENT_DB_HOST=localhost
PATIENT_DB_PORT=5432
PATIENT_DB_NAME=oncolife_patient
PATIENT_DB_USER=oncolife_admin
PATIENT_DB_PASSWORD=your_secure_password_here

# Connection pool settings (optional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=1800

# -----------------------------------------------------------------------------
# DOCTOR DATABASE (Read-Only Access)
# -----------------------------------------------------------------------------

DOCTOR_DB_HOST=localhost
DOCTOR_DB_PORT=5432
DOCTOR_DB_NAME=oncolife_doctor
DOCTOR_DB_USER=oncolife_admin
DOCTOR_DB_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# AWS CORE SETTINGS
# -----------------------------------------------------------------------------

AWS_REGION=us-west-2

# AWS Credentials (use IAM roles in production, not access keys)
# Only set these for local development
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# -----------------------------------------------------------------------------
# AWS COGNITO (Authentication)
# -----------------------------------------------------------------------------

COGNITO_USER_POOL_ID=us-west-2_XXXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_CLIENT_SECRET=your_client_secret_here

# -----------------------------------------------------------------------------
# AWS S3 (Document Storage)
# -----------------------------------------------------------------------------

# Bucket for referral documents (fax uploads)
S3_REFERRAL_BUCKET=oncolife-referrals

# Bucket for education documents (PDFs)
S3_EDUCATION_BUCKET=oncolife-education

# -----------------------------------------------------------------------------
# AWS SES (Email Notifications)
# -----------------------------------------------------------------------------

SES_SENDER_EMAIL=noreply@oncolife.com
SES_SENDER_NAME=OncoLife Care

# SES template names
ONBOARDING_WELCOME_EMAIL_TEMPLATE=oncolife-welcome

# -----------------------------------------------------------------------------
# AWS SNS (SMS Notifications)
# -----------------------------------------------------------------------------

SNS_ENABLED=true

# -----------------------------------------------------------------------------
# AWS TEXTRACT (OCR)
# -----------------------------------------------------------------------------

TEXTRACT_ENABLED=true

# -----------------------------------------------------------------------------
# FAX SERVICE (Sinch/Twilio)
# -----------------------------------------------------------------------------

# Inbound fax number for receiving referrals
FAX_INBOUND_NUMBER=+18001234567

# Webhook secret for validating fax provider callbacks
# Generate with: openssl rand -hex 32
FAX_WEBHOOK_SECRET=your_webhook_secret_here

# -----------------------------------------------------------------------------
# ONBOARDING SETTINGS
# -----------------------------------------------------------------------------

# Temporary password settings
ONBOARDING_TEMP_PASSWORD_LENGTH=12

# Reminder settings
ONBOARDING_REMINDER_MAX_COUNT=3
ONBOARDING_REMINDER_INTERVAL_DAYS=2

# Terms and Privacy versions
TERMS_VERSION=1.0
PRIVACY_VERSION=1.0
HIPAA_VERSION=1.0

# -----------------------------------------------------------------------------
# JWT SETTINGS (for internal API auth if needed)
# -----------------------------------------------------------------------------

JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7



